<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demojavafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Ejemplo de Swing JavaFX" textAlignment="CENTER" textFill="RED">
      <font>
         <Font name="System Bold" size="18.0" />
      </font>
   </Label>

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
   <Button mnemonicParsing="false" onAction="#onMiBotonEjemploClick" text="Mi botón de ejemplo" />
   <Button mnemonicParsing="false" onAction="#onMiBotonNuevaVentajaClick" text="Abrir nueva ventana" />
   <Slider fx:id="miSlider" majorTickUnit="1.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
   <Label text="Valor del slider:" />
   <Label fx:id="labelValorSlider" text="--" />
   <Label fx:id="labelTextoEjemplo" text="--" />
   <Button mnemonicParsing="false" onAction="#onMiBotonNuevaVentanaParametrosClick" text="Abrir ventana de parámetros" textFill="#3a37ed" />
</VBox>
